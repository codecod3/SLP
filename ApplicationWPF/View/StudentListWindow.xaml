<Window x:Class="ApplicationWPF.View.StudentListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationWPF.View"
        mc:Ignorable="d"
        Title="Brgy. Vicente Hizon Sr. Elementary School Database"
        Height="700" Width="770"
        Name ="ListStudentWindow"
        WindowStartupLocation="CenterScreen"
        Background="#FFFDFDFD">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Table -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons + Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Brgy. Vicente Hizon Sr. Elementary School Database"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <!-- Student list -->
        <Border Grid.Row="1"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10"
                Margin="0,0,0,10">
            <ListView x:Name="StudentListView"
                      ItemsSource="{Binding Students}"
                      SelectedItem="{Binding SelectedStudent, Mode=TwoWay}"
                      MouseDoubleClick="StudentListView_MouseDoubleClick"
                      BorderThickness="0"
                      AlternationCount="2"
                      HorizontalContentAlignment="Stretch">

                <!-- Column headers -->
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="" Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding FirstName}" Width="150"/>
                        <GridViewColumn Header="Last Name" DisplayMemberBinding="{Binding LastName}" Width="150"/>
                        <GridViewColumn Header="Contact no." DisplayMemberBinding="{Binding ContactNumber}" Width="150"/>
                        <GridViewColumn Header="No. Absences" DisplayMemberBinding="{Binding Absences}" Width="120"/>
                        <GridViewColumn Header="IsPresent" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsPresent}" IsEnabled="False"
                                              HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Add Student"
                        CommandParameter="{x:Reference Name=ListStudentWindow}"
                        Width="120" Height="40"
                        Command="{Binding AddStudentCommand}"
                        Background="#FFCCE5FF"
                        FontWeight="SemiBold"/>
                <Button Content="Edit Student"
                        Width="120" Height="40"
                        Background="#FFE5FFCC"
                        FontWeight="SemiBold"/>
                <Button Content="Remove Student"
                        Width="120" Height="40"
                        Background="#FFFFCCCC"
                        Command="{Binding DeleteStudentCommand}"
                        FontWeight="SemiBold"/>
            </StackPanel>

            <TextBlock Text="Main homepage"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       FontSize="14"
                       Foreground="Gray"
                       Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Window>