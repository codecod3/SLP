<Window x:Class="ApplicationWPF.View.EditAdviserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Adviser"
        Height="400" Width="600"
        Name="editadviserwindow"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Background="#C54B8C" Grid.Row="0"/>


        <!-- HEADER -->
        <TextBlock Text="Edit Adviser"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="Black"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- FORM -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top">

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="First Name:" Width="120" VerticalAlignment="Center" FontSize="14"/>
                <TextBox Text="{Binding SelectedAdviser.FirstName, UpdateSourceTrigger=PropertyChanged}" Width="300" Height="30"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Last Name:" Width="120" VerticalAlignment="Center" FontSize="14"/>
                <TextBox Text="{Binding SelectedAdviser.LastName, UpdateSourceTrigger=PropertyChanged}" Width="300" Height="30"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Phone Number:" Width="120" VerticalAlignment="Center" FontSize="14"/>
                <TextBox Text="{Binding SelectedAdviser.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Width="300" Height="30"/>
            </StackPanel>

        </StackPanel>

        <!-- BUTTONS -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save"
                    Width="100" Height="35"
                    CommandParameter="{x:Reference Name=editadviserwindow}"
                    Command="{Binding SaveCommand}"
                    FontWeight="SemiBold"
                     Background="#FFCCE5FF"/>

            <Button Content="Cancel"
                    Width="100" Height="35"
                    CommandParameter="{x:Reference Name=editadviserwindow}"
                    Command="{Binding CancelCommand}"
                     Background="#FFFFCCCC"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
