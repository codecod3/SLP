<Window x:Class="ApplicationWPF.View.ParentListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Brgy. Vicente Hizon Sr. Elementary School Database"
        Height="700" Width="770"
        WindowStartupLocation="CenterScreen"
        Background="#FFFDFDFD">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Table -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons + Footer -->
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <TextBlock Text="Parent List"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <!-- ===== PARENT LIST ===== -->
        <Border Grid.Row="1"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10"
                Margin="0,0,0,10">
            <ListView x:Name="ParentListView"
                      ItemsSource="{Binding Parents}"
                      SelectedItem="{Binding SelectedParent, Mode=TwoWay}"
                      BorderThickness="0"
                      AlternationCount="2"
                      HorizontalContentAlignment="Stretch"
                      MouseDoubleClick="ParentListView_MouseDoubleClick">

                <!-- Columns -->
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="" Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Parent ID" DisplayMemberBinding="{Binding ParentID}" Width="100"/>
                        <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding FirstName}" Width="150"/>
                        <GridViewColumn Header="Last Name" DisplayMemberBinding="{Binding LastName}" Width="150"/>
                        <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="200"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- ===== BUTTONS ===== -->
        <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Add Parent"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Width="120" Height="40"
                        Margin="5,0"
                        Command="{Binding AddParentCommand}"
                        Background="#FFCCE5FF"
                        FontWeight="SemiBold"/>

                <Button Content="Edit Parent"
                        Width="120" Height="40"
                        Margin="5,0"
                        Background="#FFE5FFCC"
                        FontWeight="SemiBold"/>

                <Button Content="Remove Parent"
                        Width="120" Height="40"
                        Margin="5,0"
                        Command="{Binding DeletedParentCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Background="#FFFFCCCC"
                        FontWeight="SemiBold"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
