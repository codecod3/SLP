<Window x:Class="ApplicationWPF.View.EditStudentView" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Student"
        Height="600" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#FFFDFDFD">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border CornerRadius="10" Padding="20" BorderThickness="1" BorderBrush="#CCC" Background="White" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <TextBlock Text="Edit Student Information"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- MAIN FORM -->
                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,10">

                    <!-- Student Info -->
                    <GroupBox Header="Student Information" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="First Name:" Width="130" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SelectedStudent.FirstName, UpdateSourceTrigger=PropertyChanged}" Width="300"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Last Name:" Width="130" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SelectedStudent.LastName, UpdateSourceTrigger=PropertyChanged}" Width="300"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="LRN:" Width="130" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SelectedStudent.LRN, UpdateSourceTrigger=PropertyChanged}" Width="300"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Enrollment Status:" Width="130" VerticalAlignment="Center"/>
                                <ComboBox Width="300"
                                          SelectedItem="{Binding SelectedStudent.EnrollmentStatus, UpdateSourceTrigger=PropertyChanged}">
                                    <ComboBoxItem Content="Enrolled"/>
                                    <ComboBoxItem Content="Dropped"/>
                                    <ComboBoxItem Content="Transferred"/>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Parent Info with AutoFilter -->
                    <GroupBox Header="Parent / Guardian Information" Margin="0,0,0,15">
                        <StackPanel Margin="10">

                            <!-- Parent Name with Auto-filter -->
                            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Parent Name:" Width="130" VerticalAlignment="Center"/>
                                    <Grid>
                                        <TextBox x:Name="ParentSearchBox"
                                                 Width="300"
                                                 Text="{Binding ParentNameInput, UpdateSourceTrigger=PropertyChanged}"
                                                 TextChanged="ParentSearchBox_TextChanged"
                                                 PreviewKeyDown="ParentSearchBox_PreviewKeyDown"/>

                                        <Popup x:Name="ParentSuggestionsPopup"
                                               PlacementTarget="{Binding ElementName=ParentSearchBox}"
                                               Placement="Bottom"
                                               StaysOpen="False"
                                               AllowsTransparency="True"
                                               IsOpen="False">
                                            <Border Background="White" BorderBrush="Black" BorderThickness="1">
                                                <ListBox x:Name="ParentSuggestionsList"
                                                         ItemsSource="{Binding FilteredParents}"
                                                         MouseLeftButtonUp="ParentSuggestionsList_MouseLeftButtonUp"
                                                         Width="300"
                                                         Height="100">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding FirstName}" Margin="0,0,5,0"/>
                                                                <TextBlock Text="{Binding LastName}"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>

                            <!-- Relationship Type ComboBox -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Relationship Type:" Width="130" VerticalAlignment="Center"/>
                                <ComboBox Width="300"
                                          ItemsSource="{Binding RelationshipTypes}"
                                          SelectedItem="{Binding SelectedRelationshipType, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Advisory Info with AutoFilter -->
                    <GroupBox Header="Advisory Information">
                        <StackPanel Margin="10">

                            <!-- Adviser Name with Auto-filter -->
                            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Class Adviser:" Width="130" VerticalAlignment="Center"/>
                                    <Grid>
                                        <TextBox x:Name="AdviserSearchBox"
                                                 Width="300"
                                                 Text="{Binding AdviserNameInput, UpdateSourceTrigger=PropertyChanged}"
                                                 TextChanged="AdviserSearchBox_TextChanged"
                                                 PreviewKeyDown="AdviserSearchBox_PreviewKeyDown"/>

                                        <Popup x:Name="AdviserSuggestionsPopup"
                                               PlacementTarget="{Binding ElementName=AdviserSearchBox}"
                                               Placement="Bottom"
                                               StaysOpen="False"
                                               AllowsTransparency="True"
                                               IsOpen="False">
                                            <Border Background="White" BorderBrush="Black" BorderThickness="1">
                                                <ListBox x:Name="AdviserSuggestionsList"
                                                         ItemsSource="{Binding FilteredAdvisers}"
                                                         MouseLeftButtonUp="AdviserSuggestionsList_MouseLeftButtonUp"
                                                         Width="300"
                                                         Height="100">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding FirstName}" Margin="0,0,5,0"/>
                                                                <TextBlock Text="{Binding LastName}"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Section:" Width="130" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SelectedAdvisory.SectionName, UpdateSourceTrigger=PropertyChanged}" Width="300"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>

                <!-- BUTTONS -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Save" Width="100" Height="35" Background="#FFCCE5FF" FontWeight="SemiBold" Margin="10,0"
                            Command="{Binding SaveCommand}"/>
                    <Button Content="Cancel" Width="100" Height="35" Background="#FFFFCCCC" FontWeight="SemiBold" Margin="10,0"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </ScrollViewer>
</Window>
