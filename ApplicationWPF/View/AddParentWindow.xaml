<Window x:Class="ApplicationWPF.View.AddParentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add Parent"
        Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#FFFDFDFD">

    <Border CornerRadius="15" Background="White" Padding="30" Margin="20" 
            BorderBrush="#FFCCCCCC" BorderThickness="1" >
        <Grid Margin="0,17,0,-17">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->

            <StackPanel Background="#C54B8C" Grid.Row="0"/>

            <TextBlock Text="Add Parent"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Input Fields -->
            <StackPanel Grid.Row="1" Margin="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="350">
                <TextBlock Text="First Name:" FontWeight="SemiBold" FontSize="14"/>
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                         Height="28" Padding="5" BorderBrush="#AAA" BorderThickness="1" />

                <TextBlock Text="Last Name:" FontWeight="SemiBold" FontSize="14"/>
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                         Height="28" Padding="5" BorderBrush="#AAA" BorderThickness="1" />

                <TextBlock Text="Email:" FontWeight="SemiBold" FontSize="14"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Height="28" Padding="5" BorderBrush="#AAA" BorderThickness="1" />

                <TextBlock Text="Phone Number:" FontWeight="SemiBold" FontSize="14"/>
                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                         Height="28" Padding="5" BorderBrush="#AAA" BorderThickness="1" />

                <TextBlock Text="Network:" FontWeight="SemiBold" FontSize="14"/>
                <TextBox Text="{Binding Network, UpdateSourceTrigger=PropertyChanged}"
                         Height="28" Padding="5" BorderBrush="#AAA" BorderThickness="1" />
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,0" >
                <Button Content="Add Parent"
                        Width="120" Height="35"
                        Background="#4CAF50" Foreground="White"
                        BorderBrush="#4CAF50"
                        Command="{Binding AddParentCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Cursor="Hand"
                        FontWeight="SemiBold"/>

                <Button Content="Cancel"
                        Width="120" Height="35"
                        Background="#E74C3C" Foreground="White"
                        BorderBrush="#E74C3C"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Cursor="Hand"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
