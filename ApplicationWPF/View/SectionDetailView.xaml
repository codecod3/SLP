<Window x:Class="ApplicationWPF.View.SectionDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationWPF.View"
        mc:Ignorable="d"
        Name="sectiondetailwindow"
        Title="Section Details" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Adviser Name -->


        <StackPanel Background="#C54B8C" Grid.Row="0"/>



        <Button Content="&lt;"
                Width="50" Height="35"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="0,0,0,0"
                Background="Transparent"
                CommandParameter="{x:Reference Name=sectiondetailwindow}"
                Command="{Binding BackCommand}"/>

        

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Adviser:" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding AdviserFullName}" FontSize="16" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Selected Student Picture + Details -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <Border Width="150" Height="150" Background="LightGray" CornerRadius="10" Margin="0,0,0,10">
                    <Image Source="{Binding SelectedStudentPicture}" Stretch="Uniform"/>
                </Border>
                <TextBlock Text="{Binding SelectedStudentFullName}" FontSize="16" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <StackPanel Margin="0,5,0,0">
                    <TextBlock FontWeight="Bold" FontSize="12">LRN:</TextBlock>
                    <TextBlock Text="{Binding SelectedStudent.LRN}" FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock FontWeight="Bold" FontSize="12">Phone Number:</TextBlock>
                    <TextBlock Text="{Binding SelectedStudent.PhoneNumber}" FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock FontWeight="Bold" FontSize="12">Enrollment Status:</TextBlock>
                    <TextBlock Text="{Binding SelectedStudent.EnrollmentStatus}" FontSize="12"/>
                </StackPanel>
            </StackPanel>

            <!-- Right Panel: Student List -->
            <ListBox Grid.Column="1" ItemsSource="{Binding Students}" SelectedItem="{Binding SelectedStudent}"
                     MouseDoubleClick="StudentList_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="2">
                            <TextBlock FontWeight="Bold" FontSize="12">First Name: <Run Text="{Binding FirstName}"/></TextBlock>
                            <TextBlock FontWeight="Bold" FontSize="12">Last Name: <Run Text="{Binding LastName}"/></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Window>
