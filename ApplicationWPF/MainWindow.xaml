<Window x:Class="ApplicationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationWPF"
        mc:Ignorable="d"
        Name="loginwindow"
        Title="MainWindow" Height="450" Width="400">
    <Grid Background="White">

        <Grid.RowDefinitions>

            <RowDefinition Height="50"/>
            <RowDefinition Height="350"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.RowSpan="3"
                Grid.ColumnSpan="3">
            <Image Source="/Image/login2.jpg" Opacity="0.5" />

        </StackPanel>


        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Background="OrangeRed" Orientation="Vertical">


                <TextBlock Text="QueenAnne" FontSize="15" Foreground="White" 
                           HorizontalAlignment="Center"
                           FontWeight="DemiBold"/>
                <TextBlock Text="CuriosityShop" FontSize="15" Foreground="White" 
                           HorizontalAlignment="Center"
                           FontWeight="DemiBold"/>
                



        </StackPanel>


        <StackPanel Orientation="Vertical"
                Grid.Row="1"
                Grid.Column="1">
            <TextBlock Text="Login"
                   Foreground="Black"
                   FontSize="25"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Padding="10"
                   />
            <Grid VerticalAlignment="Center"
          HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Name" 
               Foreground="Black"
               Grid.Row="0"
               Margin="0,15"
               HorizontalAlignment="Left"/>
                <TextBox  Grid.Column="1"
              
              Text="{Binding UserName}"
              Grid.Row="1"
              Padding="0,5"
              Width="255"
              HorizontalAlignment="Left"
              />
                <TextBlock Text="ID" 
                       Foreground="Black"
               Grid.Row="2"
               Margin="0,15"
               HorizontalAlignment="Left"/>
                <TextBox Grid.Row="3"
                  Text="{Binding ID}"
                  Padding="0,5"                           
                  Width="255"
                  HorizontalAlignment="Left"/>
            </Grid>
            <Button Content="Login" Margin="20" 
                CommandParameter="{x:Reference Name=loginwindow}"
                Command="{Binding LogInCommand}"
                Foreground="White"
                Background="OrangeRed"
                Height="35"
                Width="250"/>
           

        </StackPanel>


    </Grid>
</Window>
