<Window x:Class="ApplicationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationWPF"
        mc:Ignorable="d"
        Name="loginwindow"
        Title="Login" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="350"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Background Image -->
        <Image Source="/Image/login2.jpg" Opacity="0.5" Stretch="Fill"
               Grid.RowSpan="3" Grid.ColumnSpan="3"/>

        <!-- Header -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Background="#C54B8C" Orientation="Vertical">
           
        </StackPanel>

        <!-- Login Form -->
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
            <TextBlock Text="Login" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="First Name:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding UserName}" Width="255" Padding="5"/>

            <TextBlock Text="Last Name:" Margin="0,10,0,5"/>
            <TextBox Text="{Binding LastName}" Width="255" Padding="5"/>

            <TextBlock Text="Password:" Margin="0,10,0,5"/>
            <TextBox Text="{Binding ID}" Width="255" Padding="5"/>

            <Button Content="Login"
                    Width="250"
                    Height="35"
                    Margin="0,20,0,0"
                    Background="#C54B8C"
                    Foreground="White"
                    Command="{Binding LogInCommand}"
                    CommandParameter="{x:Reference loginwindow}"/>
        </StackPanel>
    </Grid>
</Window>
